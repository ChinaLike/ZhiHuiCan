<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/el1_favorable_image"
            android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/zhekou" />

        <TextView
            android:id="@+id/el1_dishes_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_m"
            android:layout_marginLeft="5dp"
            android:text="牛肉汤国" />

    </LinearLayout>

    <TextView
        android:id="@+id/el1_dishes_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/text_color_m"
        android:text="×5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2">

        <TextView
            android:id="@+id/el1_favorable_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 68"/>

        <TextView
            android:id="@+id/el1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="¥ 2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/el1_total_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_red"
        android:gravity="center"
        android:text="¥  369"
        android:layout_weight="2" />

</LinearLayout>
