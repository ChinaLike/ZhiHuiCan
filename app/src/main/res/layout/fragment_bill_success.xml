<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/code_pay_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lines="1"
            android:textColor="@color/text_color_m"
            android:textSize="@dimen/text_size_largr" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/hint_line"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/hint_color" />

        <cn.sczhckj.order.overwrite.NoScrollRecyclerview
            android:id="@+id/list_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />

        <LinearLayout
            android:id="@+id/evaluate_choose_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/pay_finish"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pay_finish_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/evaluate_go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button_full_yellow_login"
                    android:textSize="@dimen/button_size"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginLeft="@dimen/margin_right"
                    android:text="@string/evaluate_go"
                    android:textColor="@color/button_text" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/evaluate_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button_full_yellow_login"
                    android:textSize="@dimen/button_size"
                    android:text="@string/evaluate_no"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginLeft="@dimen/margin_right"
                    android:textColor="@color/button_text" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
