<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通会员:"
                android:textColor="@color/text_color_default"
                android:textSize="@dimen/cart_dishes_name_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#f54a23"
                android:textSize="@dimen/cart_dishes_RMB" />

            <TextView
                android:id="@+id/vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f54a23"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="@dimen/hint_line"
        android:layout_height="match_parent"
        android:background="@color/hint_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠:"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/cart_dishes_name_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#f54a23"
                    android:textSize="@dimen/cart_dishes_RMB" />

                <TextView
                    android:id="@+id/vip_favorable_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f54a23" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center">

            <Button
                android:id="@+id/transaction_vip"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/selector_shape_button_favor"
                android:text="@string/button_vip_no_select"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/vip_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/accounts_status_finished"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
