<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accounts_bg_tip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/gift_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/accounts_btn_ground_close" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/accounts_icon_smile"
            android:layout_width="wrap_content"
            android:textColor="#ded6d7"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="感谢小主，我们会继续努力哒~"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gift_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_gray_white"
            android:textColor="@color/text_color_red"
            android:text="¥ 2" />

        <Button
            android:id="@+id/gift_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_gray_white"
            android:textColor="@color/text_color_red"
            android:text="¥ 5" />

        <Button
            android:id="@+id/gift_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_gray_white"
            android:textColor="@color/text_color_red"
            android:text="¥ 10" />

        <Button
            android:id="@+id/gift_price4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_gray_white"
            android:textColor="@color/text_color_red"
            android:text="¥ 15" />

        <Button
            android:id="@+id/gift_price5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_gray_white"
            android:textColor="@color/text_color_red"
            android:text="自定义" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/gift_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mediu"
            android:layout_marginLeft="@dimen/margin_login"
            android:layout_marginRight="@dimen/margin_login"
            android:padding="20dp"
            android:text="确认"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_yellow" />

    </RelativeLayout>

</LinearLayout>
