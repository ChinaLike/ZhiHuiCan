<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_login"
    android:layout_marginRight="@dimen/margin_login"
    android:layout_marginTop="30dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_slide_gray_login"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/cardNumber"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/inputCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@null"
            android:hint="@string/vipCardNumberHint"
            android:textColor="@color/text_hint_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/vip_card_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:src="@drawable/open_btn_close" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_slide_gray_login"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/password"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@null"
            android:hint="@string/vipPasswordHint"
            android:inputType="textPassword"
            android:textColor="@color/text_hint_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/vip_password_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:src="@drawable/open_btn_close" />
    </LinearLayout>

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text="忘记密码？"
        android:textColor="@color/text_hint_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <Button
            android:id="@+id/confir"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_full_yellow_login"
            android:text="确认"
            android:textColor="@color/button_text"
            android:textSize="22sp" />
    </RelativeLayout>
</LinearLayout>
